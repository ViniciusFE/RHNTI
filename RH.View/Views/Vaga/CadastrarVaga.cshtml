@model RH.Model.Vaga

@{
    ViewBag.Title = "Cadastrar Vaga";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container my-4">
        <div class="card">

            <div class="card-header">
                <h1>Cadastrar Vaga</h1>
            </div>
            <div class="card-body row">

                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Vag_Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Vag_Titulo, new { htmlAttributes = new { @class = "form-control",@placeholder="Digite o título da vaga" } })
                            @Html.ValidationMessageFor(model => model.Vag_Titulo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Vag_Cargo_Car_ID, "Cargo da Vaga", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.DropDownList("Vag_Cargo_Car_ID", null, "Selecione a vaga a ser preenchida", htmlAttributes: new { @class = "form-control col-md-12" })
                            @Html.ValidationMessageFor(model => model.Vag_Cargo_Car_ID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Vag_Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
          
                            <textarea cols="200" rows="10" name="Vag_Descricao" placeholder="Faça uma descrição da Vaga" style="resize:none;"></textarea>
                            @Html.ValidationMessageFor(model => model.Vag_Descricao, "", new { @class = "text-danger" })
                        </div>
                    </div>


                </div>

            </div>
            <div class="card-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Cadastrar" class="btn btn-success" />
                    </div>
                </div>
            </div>

        </div>
    </div>
}























<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
