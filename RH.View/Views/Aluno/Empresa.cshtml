
@{
    ViewBag.Title = "Empresa";
    Layout = "~/Views/Shared/_Layout_Professor.cshtml";
}

<style>

    .Item:hover{
        -webkit-box-shadow:-1px 9px 40px -12px rgba(0,0,0,0,75);
        -moz-box-shadow: -1px 9px 40px -12px rgba(0,0,0,0.75);
        box-shadow: -1px 9px 40px -12px rgba(0,0,0,0.75);
    }

</style>

<div class="container my-4">

    <div class="card">

        <div class="card-header">
            <h3 class="text-center">Dados da Empresa @ViewBag.NomeEmpresa</h3>
        </div>

        <div class="card-body">

            <div class="row">

                <a href="@Url.Action("Setores", new { IDEmpresa=ViewBag.IDEmpresa })" class="col-md-4 mt-4 text-dark">
                    <div >
                        <div class="card hvr-glow hvr-float Item" style="cursor:pointer;">
                            <div class="card-header text-white" style="background-color: rgb(148,72,72);">
                                <h3 class="text-center">
                                    <span class="fas fa-business-time align-content-center fa-2x"></span> Setores
                                </h3>
                                <div class="card-img-overlay">

                                </div>
                            </div>
                            <div class="card-body text-center">
                                <h4>Quantidade: @ViewBag.Setores</h4>
                            </div>
                        </div>

                    </div>
                </a>

                <div class="col-md-4 mt-4">
                    <div class="card hvr-glow hvr-float Item" style="cursor:pointer;">
                        <div class="card-header text-white" style="background-color: rgb(148,72,72);">
                            <h3 class="text-center"><span class="fas fa-sitemap align-content-center fa-2x"></span> Cargos</h3>
                        </div>
                        <div class="card-body text-center">
                            <h4>Quantidade: @ViewBag.Cargos</h4>
                        </div>
                    </div>

                </div>
                <div class="col-md-4 mt-4">
                    <div class="card hvr-glow hvr-float Item" style="cursor:pointer;">
                        <div class="card-header text-white" style="background-color: rgb(148,72,72);">
                            <h3 class="text-center"><span class="fas fa-user-tie align-content-center fa-2x"></span> Funcionários</h3>
                        </div>
                        <div class="card-body text-center">
                            <h4>Quantidade: @ViewBag.Funcionarios</h4>
                        </div>
                    </div>

                </div>

                <div class="col-md-4 mt-4">
                    <div class="card hvr-glow hvr-float Item" style="cursor:pointer;">
                        <div class="card-header text-white" style="background-color: rgb(148,72,72);">
                            <h3 class="text-center"><span class="fas fa-briefcase-medical align-content-center fa-2x"></span> Benefícios</h3>
                        </div>
                        <div class="card-body text-center">
                            <h4>Quantidade: @ViewBag.Beneficios</h4>
                        </div>
                    </div>

                </div>
            </div>

        </div>

    </div>

</div>

