@model IEnumerable<RH.Model.Nota>

@{
    ViewBag.Title = "Notas da Prova";
}

<div class="container my-4">
    <div class="card">
        <div class="card-header">
            <h1 class="text-center">Notas da Prova</h1>
        </div>

        <div class="card-body">

            <table class="table table-bordered table-hover text-center">

                <tr style="background-color: rgb(148,72,72);" class="text-white">

                    <td>Nome do Aluno</td>
                    <td>Matrícula</td>
                    <td>Série</td>
                    <td>Código da Prova</td>
                    <td>Data de Entrega</td>
                    <td>Nota</td>

                </tr>

                <tr>
                    @foreach (var x in ViewBag.Provas)
                    {
                        foreach (var y in ViewBag.Alunos)
                        {
                            if (x.Pro_Aluno_Alu_ID == y.Alu_ID)
                            {
                                <td>@y.Alu_Nome</td>
                                <td>@y.Alu_Matricula</td>
                                <td>@y.Alu_Serie</td>
                                break;
                            }
                        }

                        <td>x.Pro_Codigo</td>

                        foreach(var z in ViewBag.Notas)
                        {
                            if(z.Not_Prova_Pro_ID==x.Pro_ID)
                            {
                                <td>@z.Not_DataCadastro</td>
                                <td>@z.Not_Nota</td>
                            }
                        }
                    }
                </tr>
               

            </table>

        </div>

    </div>
</div>

