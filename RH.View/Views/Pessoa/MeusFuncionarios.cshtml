@model IEnumerable<RH.Model.Pessoa>

@{
    ViewBag.Title = "MeusFuncionarios";
}

<style>

    .imagem-funcionario {
        width: 250px;
        height: 250px;
        margin-left: 16px;
        border-radius: 13%;
    }
</style>

<br />
<h2 class="text-center titulo-Lista">Meus Funcionarios</h2>
<br />

<div class="container">
    <div class="row justify-content-center">
        @foreach (var x in Model)
        {
            <div class="card" style="width: 100rem;">
                <div class="card-header">
                    <h4>Nome: @x.Pes_Nome</h4>
                </div>

                <div class="card-body row">
                    <div class="col-md-4">
                        <img src="@Url.Action("GetImagemFuncionario", new { id = x.Pes_ID })" class="imagem-funcionario"/>
                    </div>

                    <div class="col-md-5">
                        @foreach (var y in ViewBag.Cargos)
                        {
                            if (y.Car_ID == x.Pes_Cargo_Car_ID)
                            {
                                <h4>Cargo de ocupação: @y.Car_Nome</h4>
                            }
                        }

                        <h4>Data de Admissão: @x.Pes_DataAdmissao</h4>
                        <h4>Salário: @x.Pes_Salario</h4>
                        <h4>Carteira de Trabalho: @x.Pes_CTrabalho</h4>
                        <h4>CPF: @x.Pes_CPF</h4>
                        <h4>Cidade: @x.Pes_Cidade</h4>
                        <h4>Endereço: @x.Pes_Endereco</h4>
                    </div>

                    <div class="col-md-3">
                        <button class="btn btn-warning">Alterar</button>
                        <button class="btn btn-danger">Demitir</button>
                    </div>
                    
                </div>
            </div>
            <br />
            <br />
        }
    </div>
</div>
