@model IEnumerable<RH.Model.Pessoa>

@{
    ViewBag.Title = "MeusFuncionarios";
}

<style>

    .imagem-funcionario {
        width: 250px;
        height: 250px;
        margin-left: 16px;
        border-radius: 13%;
    }

    #Carregando {
        align-content: center;
    }
    .modal-backdrop.show {
        height: 100%;
    }
</style>

<br />
<h2 class="text-center titulo-Lista">Meus Funcionários</h2>
<br />

<a class="btn btn-success" href="@Url.Action("CadastrarFuncionario","Pessoa")">Cadastrar Funcionário</a>
<br />
<hr />

@if (Model.Count() > 0)
{
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var x in Model)
            {
                <div class="card" style="width: 100rem;" id="card-@x.Pes_ID">
                    <div class="card-header">
                        <h4>Nome: @x.Pes_Nome</h4>
                    </div>

                    <div class="card-body row">
                        <div class="col-md-4">
                            <img src="@Url.Action("GetImagemFuncionario", new { id = x.Pes_ID })" class="imagem-funcionario" />
                        </div>

                        <div class="col-md-5">
                            @foreach (var y in ViewBag.Cargos)
                            {
                                if (y.Car_ID == x.Pes_Cargo_Car_ID)
                                {
                                    <h4>Cargo de ocupação: @y.Car_Nome</h4>
                                }
                            }

                            <h4>Data de Admissão: @x.Pes_DataAdmissao</h4>
                            <h4>Salário: @x.Pes_Salario</h4>
                            <h4>Carteira de Trabalho: @x.Pes_CTrabalho</h4>
                            <h4>CPF: @x.Pes_CPF</h4>
                            <h4>Cidade: @x.Pes_Cidade</h4>
                            <h4>Endereço: @x.Pes_Endereco</h4>
                        </div>

                        <div class="col-md-3">
                            <a class="btn btn-warning text-white" href="@Url.Action("AlterarFuncionario","Pessoa",new { id=x.Pes_ID})">Alterar</a>
                            <button class="btn btn-danger demitir" data-id="@x.Pes_ID">Demitir</button>
                        </div>

                    </div>
                </div>
                <br />
                <br />
            }
        </div>
    </div>
}

else
{
    <h1 class="text-center">Sua empresa ainda não possui nenhum funcionário cadastrado...</h1>
}

<hr />


<div class="modal fade" tabindex="-1" role="dialog" id="ModalDemissao">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Demitir funcionário</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="DemitirFuncionario">Sim</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="BtnNao">Não</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        window.addEventListener('click', function (e) {
            var mouse = {
                page: {
                    x: e.pageX,
                    y: e.pageY
                },
                client: {
                    x: e.clientX,
                    y: e.clientY
                }
            }
            console.log(mouse.page.y);

            if (document.querySelector("#ModalDemissao").style.display == "none") {
                document.querySelector(".modal-content").style.marginTop = (mouse.page.y - 100) + "px";

            }

        });


    $(document).ready(function () {
        var IDFuncionario;

        var motivo;

        $(".motivodemissao").prop("checked", true);


        $(".demitir").click(function () {
            IDFuncionario = $(this).attr("data-id");
            var altura = $(document).height() - (300 * IDFuncionario) + 'px';

            $("#texto").css("display", "block");
            $("#Carregando").css("display", "none");
            $(".modal-body").html("<h5 id='texto' class='text-center'>Tem certeza que deseja demitir o funcionário?</h5>"+
                "<p class='text-center'>Por favor marque o motivo da demissão do funcionário.</p>"+
                "<div class='text-center'>"+
                    "<label><input type='radio' name='Motivo' value='Pediu demissao' id='pediudemissao' checked/>Pediu demissão</label>"+
                    "<label><input type='radio' name='Motivo' value='Foi demitido' id='demitido'/>Foi demitido</label>"+
                "</div>");
            $("#BtnNao").removeAttr("disabled");
            $("#ModalDemissao").modal('show');
        });

        $("#DemitirFuncionario").click(function () {
            if ($("#pediudemissao").prop("checked")) {
                motivo = $("#pediudemissao").val();
            }

            else if ($("#demitido").prop("checked")) {
                motivo = $("#demitido").val();
            }

            $(this).attr("disabled", "disabled");
            $("#BtnNao").attr("disabled","disabled");
            var url = "@Url.Action("Demitir","Pessoa")";
            $("#texto").css("display", "none");
            $("#Carregando").css("display", "block");
            $.post(url, { id: IDFuncionario, Motivo: motivo }, RespostaServidor);
        });

        function RespostaServidor(retorno) {
            $("#texto").css("display", "block");
            $("#Carregando").css("display", "none");
            $(".modal-body").html("<p id='texto' class='text-center'>" + retorno + "</p>");
            $("#DemitirFuncionario").attr("disabled", "disabled");
            $("#card-" + IDFuncionario + "").slideUp("slow");
        }
    });
    </script>
}
