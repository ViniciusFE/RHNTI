@model IEnumerable<RH.Model.Pessoa>

@{
    ViewBag.Title = "MeusFuncionarios";
}

<style>

    .imagem-funcionario {
        width: 250px;
        height: 250px;
        margin-left: 16px;
        border-radius: 13%;
    }
</style>

<br />
<h2 class="text-center titulo-Lista">Meus Funcionarios</h2>
<br />

<div class="container">
    <div class="row justify-content-center">
        @foreach (var x in Model)
        {
            <div class="card" style="width: 100rem;">
                <div class="card-header">
                    <h4>Nome: @x.Pes_Nome</h4>
                </div>

                <div class="card-body row">
                    <div class="col-md-4">
                        <img src="@Url.Action("GetImagemFuncionario", new { id = x.Pes_ID })" class="imagem-funcionario"/>
                    </div>

                    <div class="col-md-5">
                        @foreach (var y in ViewBag.Cargos)
                        {
                            if (y.Car_ID == x.Pes_Cargo_Car_ID)
                            {
                                <h4>Cargo de ocupação: @y.Car_Nome</h4>
                            }
                        }

                        <h4>Data de Admissão: @x.Pes_DataAdmissao</h4>
                        <h4>Salário: @x.Pes_Salario</h4>
                        <h4>Carteira de Trabalho: @x.Pes_CTrabalho</h4>
                        <h4>CPF: @x.Pes_CPF</h4>
                        <h4>Cidade: @x.Pes_Cidade</h4>
                        <h4>Endereço: @x.Pes_Endereco</h4>
                    </div>

                    <div class="col-md-3">
                        <button class="btn btn-warning">Alterar</button>
                        <button class="btn btn-danger" data-id="@x.Pes_ID" id="demitir">Demitir</button>
                    </div>
                    
                </div>
            </div>
            <br />
            <br />
        }
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="ModalDemissao">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Demitir funcionário</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja demitir o funcionário?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="DemitirFuncionario">Sim</button>
                <button type="button" class="btn btn-danger">Não</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function () {
        var IDFuncionario;

        $("#demitir").click(function () {
            IDFuncionario = $(this).attr("data-id");
        });

        $("#DemitirFuncionario").click(function () {
            var url = "@Url.Action("Demitir","Pessoa")";
            $.post(url, { id=IDFuncionario }, RespostaServidor);
        });

        function RespostaServidor(retorno) {

        }
    });
    </script>
}
