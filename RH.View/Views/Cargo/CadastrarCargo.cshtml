@model RH.Model.Cargo
@{
    ViewBag.Title = "CadastrarCargo";
}

<h2 class="text-center">Cadastrar Cargo</h2>


@using (Html.BeginForm("CadastrarCargo", "Cargo", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">Cargo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-row">
            <div class="form-group col-12">
                @Html.LabelFor(model => model.Car_Setor_Set_ID, htmlAttributes: new { @class = "control-label " })

                @Html.DropDownList("Car_Setor_Set_ID", null, "Selecione o setor", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Car_Setor_Set_ID, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-6">
                @Html.LabelFor(model => model.Car_Nome, htmlAttributes: new { @class = "control-label " })

                @Html.EditorFor(model => model.Car_Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Car_Nome, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-6">
                @Html.LabelFor(model => model.Car_Cargo_Car_ID, htmlAttributes: new { @class = "control-label " })

                @Html.DropDownList("Car_Cargo_Car_ID", null, "Selecione o cargo chefe", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Car_Cargo_Car_ID, "", new { @class = "text-danger" })

            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
}

<div class="back">
    <a href="~/Cargo/Index"><i class="fas fa-arrow-left"></i> Voltar</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
