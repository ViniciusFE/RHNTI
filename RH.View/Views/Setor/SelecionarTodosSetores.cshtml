@model IEnumerable<RH.Model.Setor>

@{
    ViewBag.Title = "SelecionarTodosSetores";

}

<style>
    th, td {
        padding: 0 !important;
        /* vertical-align: top; */
        border-top: 1px solid #dee2e6;
    }

    .table {
        width: auto;
        margin-top: 30px;
    }

    .table-bordered {
        border: none;
        font-size: 20px;
    }
</style>
<br />

<p>
    <a class="btn btn-success custom" href="@Url.Action("Index","Setor")"><i class="fas fa-chevron-left"></i>    Voltar </a>
</p>

<h2>Ordenação Hieráquica Entre os Setores</h2>
<hr />

    @if (Model.Count() > 0)
    {
        <table class=" table-bordered ">
        
            @{
                int t = 0;
             }

                @foreach (var item in Model)
                {
                    <tr>
                        @for (int x = 1; x < item.Set_Setor_Set_ID; x++)
                        {
                            <th class="espaco"></th>
                        }
                    
                        <td class="item">
                            @Html.DisplayFor(modelItem => item.Set_Nome)
                        </td>

                    </tr>
                    t++;
                }
            

        </table>

    }
    else
    {
        <div class="alert alert-primary">
            <div class="alert-body">
                <h4>Esta empresa ainda não possui nenhum setor cadastrado...</h4>
            </div>
        </div>
    }
