@model IEnumerable<RH.Model.Beneficio>

@Styles.Render("~/Content/Pages/css")


<br />
<a class="btn btn-success custom" href="@Url.Action("CadastrarDependente","Dependente",new { IDFuncionario=ViewBag.IDFuncionario})"><span class="fas fa-list-ol"></span> Meus benefício</a>
<br />
<hr />

<div class="container my-4">
    <div class="card">
        <div class="card-header">
            <h2>Benefícios do funcionário @ViewBag.NomeFuncionario</h2>
        </div>

        <div class="card-body">

            <button class="btn btn-danger custom float-right"><i class="fas fa-plus"></i> Adicionar benefício</button>
            <br />
            <br />

            @if (Model.Count() > 0)
            {
                <table class="table table-bordered text-center">
                    <tr class="custom text-white" style="background-color: rgb(148,72,72);">
                        <th>
                            @Html.DisplayNameFor(model => model.Ben_Nome)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Ben_Custo)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Ben_DataCadastro)
                        </th>

                        <th>
                            Ações
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr id="Beneficio-@item.Ben_ID">
                            <td>
                                @Html.DisplayFor(modelItem => item.Ben_Nome)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Ben_Custo) $
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Ben_DataCadastro)
                            </td>

                            <td>
                                <a class="btn btn-warning custom" href="@Url.Action("AlterarDependente","Dependente",new { id=item.Ben_ID})"><i class="fas fa-user-edit"></i> Alterar</a>
                                <button class="btn btn-danger custom AbrirModal" data-id="@item.Ben_ID"><i class="fas fa-user-times"></i> Excluir</button>
                            </td>
                        </tr>
                    }

                </table>
            }

            else
            {
                <div class="alert alert-primary" role="alert">
                    <div class="alert-body">
                        <h4>Este Funcionário não possui nenhum benefício cadastrado</h4>
                    </div>
                </div>
            }




        </div>
    </div>
</div>

<hr />

<div class="back">
    <a href="~/Pessoa/MeusFuncionarios"><i class="fas fa-arrow-left"></i> Voltar</a>
</div>


